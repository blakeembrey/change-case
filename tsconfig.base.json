{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5"],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
